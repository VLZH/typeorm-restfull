{
    "name": "typeorm-restfull",
    "version": "0.0.17",
    "description": "Adding restfull to your typeorm models",
    "repository": "https://github.com/VLZH/typeorm-restfull",
    "author": "VLZH",
    "license": "MIT",
    "main": "dist/index.js",
    "types": "dist/index.d.js",
    "keywords": [
        "typeorm",
        "api",
        "rest",
        "koa",
        "express"
    ],
    "dependencies": {
        "class-validator": "^0.x.x",
        "http-status-codes": "^1.x.x",
        "koa": "^2.x.x",
        "koa-router": "^7.x.x",
        "lodash": "^4.x.x",
        "query-string": "^6.x.x",
        "typeorm": "^0.x.x"
    },
    "devDependencies": {
        "@types/http-status-codes": "^1.2.0",
        "@types/jest": "^23.3.5",
        "@types/koa": "^2.0.46",
        "@types/koa-router": "^7.0.30",
        "@types/lodash": "^4.14.110",
        "@types/query-string": "^6.1.0",
        "jest": "^23.6.0",
        "prettier": "^1.15.3",
        "ts-jest": "^23.10.4",
        "tslint": "^5.11.0",
        "tslint-config-prettier": "^1.17.0",
        "tslint-plugin-prettier": "^2.0.1",
        "typescript": "^3.2.2",
        "yarn": "^1.7.0"
    },
    "prettier": {
        "tabWidth": 4
    },
    "scripts": {
        "build": "tsc --declaration",
        "build:dev": "tsc --watch --declaration",
        "pub": "tsc --declaration && ./node_modules/yarn/bin/yarn publish",
        "test": "jest"
    },
    "jest": {
        "moduleFileExtensions": [
            "ts",
            "tsx",
            "js",
            "jsx",
            "json"
        ],
        "transform": {
            "^.+\\.(ts|tsx)$": "ts-jest"
        },
        "globals": {
            "ts-jest": {
                "tsConfig": "tsconfig.json"
            }
        },
        "testMatch": [
            "**/__tests__/*.+(ts|tsx|js)"
        ]
    }
}
