{
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "lib": ["es2017", "es2015", "dom"],
        "sourceMap": true,
        "removeComments": true,
        "strict": true,
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "baseUrl": "./src"
    },
    "files": ["index.ts"],
    "include": ["./src/**/*.ts"],
    "exclude": ["node_modules", "./src/**/__tests__"]
}
